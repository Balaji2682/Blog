<h1>Editing Article</h1>

<% if @article.errors.any?%>
  <h2> The following error prevented the article from saving</h2>
  <ol>
    <%@article.errors.full_messages.each do |msg| %>
      <li><%=msg %></li>
    <%end %>
  </ol>
<%end %>
<%= form_with(model: @article, local: true)  do |f|%>
  <p>
    <%=f.label :title %>
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :description %>
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>

<%= link_to 'Show this Article', article_path %>

